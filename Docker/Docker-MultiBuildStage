<<<---MULTI BUILD STAGE FOR NODEJS---->>>
FROM node:18-alpine 
WORKDIR /app
COPY package*.json ./
RUN npm install 
COPY . .
EXPOSE 8080
CMD ["node", "index.js"]

-------------------------------------------
# Stage 1: Build stage
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install --production
COPY . .

# Stage 2: Production image
FROM node:18-alpine
WORKDIR /app
COPY --from=build /app ./
EXPOSE 8080
CMD ["node", "index.js"]
